<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="20dp"-->
<!--                android:orientation="vertical">-->
<!--            </LinearLayout>-->
<!--        </ScrollView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/artsList"/>
        </LinearLayout>


        </LinearLayout>
    </LinearLayout>

